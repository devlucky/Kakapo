use_frameworks!

def testing_pods
    pod 'Quick', '~> 1.0'
    pod 'Nimble', '~> 7.0'
    pod 'SwiftyJSON', '~> 4.0'
end

target 'Kakapo iOSTests' do
    platform :ios, '9.0'
    testing_pods
end

target 'Kakapo tvOSTests' do
    platform :tvos, '9.2'
    testing_pods
end

target 'Kakapo macOSTests' do
    platform :osx, '10.11'
    testing_pods
end
